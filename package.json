{
  "name": "mocha-pup",
  "description": "Run mocha tests in Chrome, using webpack and puppeteer.",
  "version": "3.0.2",
  "main": "cjs/index.js",
  "types": "cjs/index.d.ts",
  "bin": {
    "mocha-pup": "bin/mocha-pup.js"
  },
  "scripts": {
    "clean": "rimraf ./cjs",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json",
    "pretest": "npm run typecheck && npm run lint",
    "test": "mocha \"./test/**/*.spec.ts\"",
    "lint": "eslint . -f codeframe",
    "typecheck": "tsc --noEmit",
    "mocha-pup": "node -r @ts-tools/node/r ./src/cli.ts",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "mocha": ">=7",
    "puppeteer": ">=1",
    "webpack": ">=4"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^5.1.0",
    "create-listening-server": "^1.0.0",
    "css-loader": "^3.6.0",
    "express": "^4.17.1",
    "find-up": "^4.1.0",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^4.3.0",
    "promise-assist": "^1.3.0",
    "style-loader": "^1.2.1",
    "webpack-dev-middleware": "^3.7.2"
  },
  "devDependencies": {
    "@ts-tools/node": "^1.1.3",
    "@ts-tools/webpack-loader": "^1.1.4",
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.6",
    "@types/glob": "^7.1.2",
    "@types/mocha": "^7.0.2",
    "@types/node": "10",
    "@types/puppeteer": "^3.0.0",
    "@types/webpack": "^4.41.17",
    "@types/webpack-dev-middleware": "^3.7.1",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "chai": "^4.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "mocha": "^8.0.1",
    "puppeteer": "^4.0.0",
    "rimraf": "^3.0.2",
    "typescript": "~3.9.5",
    "webpack": "^4.43.0"
  },
  "files": [
    "bin",
    "cjs",
    "src",
    "static"
  ],
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "engines": {
    "node": ">=10"
  },
  "license": "MIT",
  "repository": "git@github.com:wixplosives/mocha-pup.git"
}
