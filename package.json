{
  "name": "mocha-pup",
  "description": "Run mocha tests in Chrome, using webpack and puppeteer.",
  "version": "5.1.6",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mocha-pup": "bin/mocha-pup.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json",
    "pretest": "npm run build && npm run lint",
    "test": "npm run test:only",
    "test:only": "mocha \"./test/**/*.spec.ts\"",
    "lint": "eslint . -f codeframe",
    "typecheck": "tsc --noEmit",
    "mocha-pup": "node -r @ts-tools/node/r ./src/cli.ts",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "html-webpack-plugin": "^4.0.0 || ^5.0.0",
    "mocha": ">=7",
    "puppeteer": ">=1",
    "webpack": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "commander": "^7.2.0",
    "create-listening-server": "^1.0.0",
    "css-loader": "^5.2.4",
    "express": "^4.17.1",
    "find-up": "^5.0.0",
    "glob": "^7.1.6",
    "promise-assist": "^1.3.0",
    "style-loader": "^2.0.0",
    "webpack-dev-middleware": "^4.1.0"
  },
  "devDependencies": {
    "@ts-tools/node": "^2.1.1",
    "@ts-tools/webpack-loader": "^2.1.1",
    "@types/chai": "^4.2.17",
    "@types/express": "^4.17.11",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "10",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "html-webpack-plugin": "^5.3.1",
    "mocha": "^8.3.2",
    "puppeteer": "^9.0.0",
    "rimraf": "^3.0.2",
    "strip-ansi": "^6.0.0",
    "typescript": "~4.2.4",
    "webpack": "^5.36.2"
  },
  "files": [
    "bin",
    "dist",
    "src",
    "static"
  ],
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "engines": {
    "node": ">=10"
  },
  "license": "MIT",
  "repository": "git@github.com:wixplosives/mocha-pup.git"
}
