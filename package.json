{
  "name": "mocha-pup",
  "description": "Run mocha tests in Chrome, using webpack and puppeteer.",
  "version": "2.0.0",
  "main": "cjs/index.js",
  "types": "cjs/index.d.ts",
  "bin": {
    "mocha-pup": "cjs/cli.js"
  },
  "scripts": {
    "clean": "rimraf ./cjs",
    "prebuild": "yarn clean",
    "build": "tsc -p tsconfig.build.json",
    "pretest": "yarn typecheck && yarn lint",
    "test": "mocha \"./test/**/*.spec.ts\"",
    "lint": "eslint . --ext .ts,.tsx -f codeframe",
    "typecheck": "tsc --noEmit",
    "mocha-pup": "node -r @ts-tools/node/r ./src/cli.ts",
    "prepack": "yarn build"
  },
  "peerDependencies": {
    "mocha": ">=7",
    "puppeteer": ">=1",
    "webpack": ">=4"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "commander": "^4.1.0",
    "create-listening-server": "^1.0.0",
    "css-loader": "^3.4.2",
    "express": "^4.17.1",
    "find-up": "^4.1.0",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^4.0.0-beta.11",
    "promise-assist": "^1.3.0",
    "style-loader": "^1.1.3",
    "webpack-dev-middleware": "^3.7.2"
  },
  "devDependencies": {
    "@ts-tools/node": "^1.1.3",
    "@ts-tools/webpack-loader": "^1.1.2",
    "@types/chai": "^4.2.7",
    "@types/express": "^4.17.2",
    "@types/glob": "^7.1.1",
    "@types/html-minifier": "^3.5.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "8",
    "@types/puppeteer": "^2.0.0",
    "@types/webpack": "^4.41.3",
    "@types/webpack-dev-middleware": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "mocha": "^7.0.1",
    "puppeteer": "^2.1.0",
    "rimraf": "^3.0.1",
    "typescript": "~3.7.5",
    "webpack": "^4.41.5",
    "wtfnode": "^0.8.1"
  },
  "files": [
    "cjs",
    "src",
    "static"
  ],
  "license": "MIT",
  "repository": "git@github.com:wixplosives/mocha-pup.git"
}
